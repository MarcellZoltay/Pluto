<Window x:Class="Pluto.Wpf_autofac.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:myControls="clr-namespace:Pluto.Wpf_autofac.Views"
        Title="{Binding Title}" Height="350" Width="525"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        MinWidth="600" MinHeight="600">
    
    <DockPanel>
        <myControls:NavigationBar DockPanel.Dock="Top"
                                  StartPageCommand="{Binding NavigateToStartPageCommand}"
                                  CurriculumPageCommand="{Binding NavigateToCurriculumPageCommand}"
                                  TermsPageCommand="{Binding NavigateToTermsPageCommand}"
                                  SubjectsPageCommand="{Binding NavigateToSubjectsPageCommand}"/>
        <Label DockPanel.Dock="Bottom" Content="{Binding Title}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <ContentControl prism:RegionManager.RegionName="MainRegion" />
    </DockPanel>
</Window>
