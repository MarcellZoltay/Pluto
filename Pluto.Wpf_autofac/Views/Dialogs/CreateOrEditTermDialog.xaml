<Window x:Class="Pluto.Wpf_autofac.Views.Dialogs.CreateOrEditTermDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"             
        Title="{Binding Title}" WindowStartupLocation="CenterOwner"
        Width="200" Height="150">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Center" Content="{Binding TermName}" />

        <CheckBox Grid.Row="1" Content="Aktív" 
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  IsChecked="{Binding TermIsActive, Mode=TwoWay}"/>

        <Grid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" HorizontalAlignment="Right" Content="{Binding ButtonContent}" Command="{Binding CreateSaveCommand}"/>
            <Button Grid.Column="1" HorizontalAlignment="Left" Content="Back" Command="{Binding BackCommand}" />
        </Grid>
    </Grid>
</Window>
