<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Pluto.Wpf.ResourceDictionaries">


    <LinearGradientBrush x:Key="dockedPanelBackgroundBrush" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Offset="0.0" Color="{StaticResource LightBlue}" />
                <GradientStop Offset="0.5" Color="Black" />
                <GradientStop Offset="1.0" Color="{StaticResource LightBlue}" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="lightTextColorBrush" Color="{StaticResource LightTextColor}" />

</ResourceDictionary>