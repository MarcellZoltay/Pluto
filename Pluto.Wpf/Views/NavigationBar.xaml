<UserControl x:Class="Pluto.Wpf.Views.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pluto.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="navigationbar">

    <UserControl.Resources>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource buttonBaseStyle}">
            <Setter Property="Margin" Value="3 5" />
            <Setter Property="FontSize" Value="15" />
        </Style>
    </UserControl.Resources>
    
    <WrapPanel Margin="10 0">
        <Button Content="Tanterv" Command="{Binding ElementName=navigationbar, Path=CurriculumPageCommand}" />
        <Button Content="Félévek" Command="{Binding ElementName=navigationbar, Path=TermsPageCommand}" />
        <Button Content="Tantárgyak" Command="{Binding ElementName=navigationbar, Path=SubjectsPageCommand}" />
    </WrapPanel>

</UserControl>
